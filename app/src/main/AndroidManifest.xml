<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlanillaRural" 
        tools:targetApi="31">

        <!-- CONFIGURACIÓN PARA COMPARTIR ARCHIVOS -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <!-- PANTALLA PRINCIPAL -->
        <activity
            android:name=".ListaAnimalesActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting"> 
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ACTIVIDADES DE BOVINOS Y GENERALES -->
        <activity
            android:name=".AgregarAnimalActivity"
            android:exported="false" />
        <activity
            android:name=".MovimientosActivity"
            android:exported="false" />
        <activity
            android:name=".AgregarMovimientoActivity"
            android:exported="false" />
        <activity
            android:name=".SanidadActivity"
            android:exported="false" />
        <activity
            android:name=".AgregarSanidadActivity"
            android:exported="false" />
        <activity
            android:name=".NacimientosPendientesActivity"
            android:exported="false" />
        <activity
            android:name=".AgregarSanidadGrupalActivity"
            android:exported="false" />
        <activity
            android:name=".SeleccionarAnimalesActivity"
            android:exported="false" />
        <activity
            android:name=".FinanzasNotasActivity"
            android:exported="false" />
        <activity
            android:name=".AgregarAnotacionActivity"
            android:exported="false" />

        <!-- SECCIÓN OVINOS RECONSTRUIDA (V2) -->
        <activity
            android:name=".OvinosMainActivity"
            android:exported="false" />
        <activity
            android:name=".AgregarMovimientoOvinoActivity"
            android:exported="false" />
        <activity
            android:name=".RegistrarSanidadOvinoActivity"
            android:exported="false" />
        <activity
            android:name=".HistorialOvinosActivity"
            android:exported="false" />
            
        <!-- Actividades obsoletas que dejamos por seguridad por ahora, pero ya no se usan -->
        <activity
            android:name=".RegistroOvinosActivity"
            android:exported="false" />
