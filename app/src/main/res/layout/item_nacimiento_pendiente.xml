<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:background="@drawable/card_background"
    android:elevation="4dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNacimientoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="5 Novillos (01/01/2024)" />

        <TextView
            android:id="@+id/tvNacimientoProgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Asignados: 2 de 5" />

    </LinearLayout>

    <!-- BotÃ³n con el nuevo color verde -->
    <Button
        android:id="@+id/btnAsignarIds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asignar IDs"
        android:backgroundTint="@color/btn_acciones_color"
        android:textColor="@android:color/white"/>

</LinearLayout>