<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="2dp"
    android:elevation="2dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloAnotacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Venta de Lana"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <!-- Monto (Visible solo si es ingreso/gasto) -->
            <TextView
                android:id="@+id/tvMontoAnotacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ $5000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4CAF50"/> 
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescripcionAnotacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle de la operación..."
            android:layout_marginTop="4dp"
            android:textColor="#616161"/>

        <TextView
            android:id="@+id/tvFechaAnotacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01/01/2024"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:gravity="end"
            android:textStyle="italic"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>