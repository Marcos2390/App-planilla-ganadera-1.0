<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título más compacto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agregar_animal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Campos de texto (Altura estándar 48dp) -->
        <EditText
            android:id="@+id/etNumeroCaravana"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_numero_caravana"
            android:inputType="number" />
        <EditText
            android:id="@+id/etCategoria"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_categoria" />
        <EditText
            android:id="@+id/etRaza"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_raza" />
        <EditText
            android:id="@+id/etEdad"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_edad"
            android:inputType="date" />
        <EditText
            android:id="@+id/etInformacionAdicional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_informacion_adicional"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top"
            android:layout_marginBottom="12dp"/>

        <!-- ¡SELECTOR DE COLOR ELIMINADO! -->

        <!-- Botón Principal -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/guardar_animal"
            android:layout_marginTop="8dp"/>

        <!-- Botones Secundarios en FILA (Horizontal) para ahorrar espacio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnVerSanidad"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Sanidad"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnVerMovimientos"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Movimientos"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Botón Dar de Baja -->
        <Button
            android:id="@+id/btnDarDeBaja"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Dar de Baja / Vender"
            android:backgroundTint="#D32F2F" 
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:visibility="gone" 
            tools:visibility="visible"/>

        <!-- Botón Cancelar -->
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/cancelar"
            android:layout_marginTop="8dp"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>
</ScrollView>