<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView para el nombre o número del animal -->
    <TextView
        android:id="@+id/tvNombreAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de Caravana: 1234"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- TextView para la raza -->
    <TextView
        android:id="@+id/tvRazaAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raza: Angus"
        android:textSize="16sp" />

    <!-- TextView para la categoría -->
    <TextView
        android:id="@+id/tvCategoriaAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoría: Vaca"
        android:textSize="16sp" />

    <!-- ¡NUEVO! TextView para la edad o fecha de nacimiento -->
    <TextView
        android:id="@+id/tvEdadAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nacimiento: 01/01/2023"
        android:textSize="16sp" />

</LinearLayout>