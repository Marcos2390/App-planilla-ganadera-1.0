<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/background_caravana_naranja"
    android:elevation="4dp"
    android:padding="12dp">

    <!-- Número de Caravana (GRANDE Y CENTRADO) -->
    <TextView
        android:id="@+id/tvNombreAnimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1234" />

    <!-- Línea separadora -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="#33000000"
        app:layout_constraintTop_toBottomOf="@id/tvNombreAnimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor para el resto de datos (VERTICAL PARA GRID) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chevronIcon">

        <TextView
            android:id="@+id/tvCategoriaAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Categoría: Novillo" />

        <TextView
            android:id="@+id/tvRazaAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:textSize="12sp"
            tools:text="Raza: Angus" />

        <TextView
            android:id="@+id/tvEdadAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:textSize="12sp"
            tools:text="Nac: 01/01/2023" />

        <TextView
            android:id="@+id/tvInformacionAdicionalAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            android:textSize="11sp"
            android:textStyle="italic"
            android:layout_marginTop="2dp"
            tools:text="Obs: Tiene una cicatriz"
            android:visibility="visible"/>

    </LinearLayout>

    <!-- Icono de flecha -->
    <ImageView
        android:id="@+id/chevronIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

</androidx.constraintlayout.widget.ConstraintLayout>