<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_main"
    tools:context=".ListaAnimalesActivity">

    <!-- MARCA DE AGUA CON FIRMA -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:rotation="-25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planilla Rural"
            android:textColor="#E0E0E0" 
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by @marcosdesign"
            android:textColor="#CACACA"
            android:textSize="18sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <!-- CONTENIDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Botón de Notificaciones (Campanita) -->
        <ImageButton
            android:id="@+id/btnNotificaciones"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_notification_bell_disabled" 
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/searchViewAnimales"/>

        <!-- Barra de búsqueda -->
        <SearchView
            android:id="@+id/searchViewAnimales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:queryHint="@string/buscar_caravana"
            android:iconifiedByDefault="false"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnNotificaciones" />

        <!-- Panel de Acciones (Reemplazo del Botón) -->
        <LinearLayout
            android:id="@+id/panelAcciones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:background="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/searchViewAnimales"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Fila 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <TextView
                    android:id="@+id/btnAgregarAnimal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Agregar\nAnimal"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"
                    android:drawableTop="@drawable/ic_add_animal_final"
                    android:drawablePadding="4dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btnRegistrarMovimiento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Registrar\nMovimiento"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"
                    android:drawableTop="@drawable/ic_movimiento_final"
                    android:drawablePadding="4dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btnGestionOvinos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Gestión\nOvinos"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"
                    android:drawableTop="@drawable/ic_add_ovino_final"
                    android:drawablePadding="4dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btnNacimientos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Nacimientos"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"
                    android:drawableTop="@drawable/ic_add_calf_final"
                    android:drawablePadding="4dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Fila 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:baselineAligned="false">

                <TextView
                    android:id="@+id/btnRegistrarSanidad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sanidad\nGrupal"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"
                    android:drawableTop="@drawable/ic_sanidad_final"
                    android:drawablePadding="4dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btnGestionPotreros"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Gestión\nPotreros"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"
                    android:drawableTop="@drawable/ic_potreros_final"
                    android:drawablePadding="4dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btnFinanzas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Finanzas\ny Notas"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"
                    android:drawableTop="@drawable/ic_nav_finanzas"
                    android:drawablePadding="4dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btnExportar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Exportar\nDatos"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"
                    android:drawableTop="@drawable/ic_menu_overflow"
                    android:drawablePadding="4dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </LinearLayout>

        <!-- RecyclerView para mostrar la lista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAnimales"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/panelAcciones"
            app:layout_constraintBottom_toTopOf="@id/tvResumenCategorias"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_animal" />

        <!-- Resumen de totales -->
        <TextView
            android:id="@+id/tvResumenCategorias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@color/resumen_background_color"
            android:textColor="@android:color/white"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Total Real: 85 | Vacas: 50 | Novillos: 35" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>