<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Sanidad (Ovino)"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/etTratamientoOvinoV2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tratamiento (Ej: DesparasitaciÃ³n)"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etProductoOvinoV2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Producto (Ej: Cydectin)"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etDosisOvinaV2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Dosis (Ej: 2ml)"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etCantidadOvinaV2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Cantidad de Animales Tratados"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etFechaSanidadOvinaV2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Fecha"
            android:inputType="date"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnGuardarSanidadOvinaV2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Guardar Sanidad"/>

    </LinearLayout>
</ScrollView>