<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agregar_sanidad"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/etTratamiento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/hint_tratamiento"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/etProducto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/hint_producto"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/etDosis"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/hint_dosis"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/etFechaSanidad"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/hint_fecha"
            android:inputType="date"
            android:layout_marginBottom="16dp" 
            android:padding="10dp"
            android:background="@android:drawable/edit_text"/>

        <!-- Campo Pr칩xima Dosis -->
        <EditText
            android:id="@+id/etFechaProximaDosis"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/hint_proxima_dosis"
            android:inputType="date"
            android:layout_marginBottom="24dp"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"/>

        <!-- Bot칩n Guardar (Con el nuevo color verde) -->
        <Button
            android:id="@+id/btnGuardarSanidad"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/guardar_sanidad"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/btn_acciones_color" 
            android:textColor="@android:color/white"/>

        <!-- Bot칩n Cancelar (Estilo est치ndar) -->
        <Button
            android:id="@+id/btnCancelarSanidad"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/cancelar"
            android:textSize="20sp"/>

    </LinearLayout>
</ScrollView>